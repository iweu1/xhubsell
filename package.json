{
  "name": "xhubsell",
  "version": "0.0.1",
  "private": true,
  "description": "XHubSell - Monorepo for Next.js frontend and NestJS backend",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "commit": "git-cz",
    "lint-staged": "lint-staged",
    "deploy:database": "./scripts/deploy-database.sh",
    "deploy:secrets": "./scripts/generate-secrets.sh",
    "deploy:frontend": "echo 'Deploy frontend via Vercel dashboard or GitHub Actions'",
    "deploy:backend": "echo 'Deploy backend via Railway dashboard or GitHub Actions'",
    "deploy:checklist": "echo 'See DEPLOYMENT_CHECKLIST.md for deployment verification'",
    "deploy:health": "./scripts/health-check.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@commitlint/cz-commitlint": "^19.0.3",
    "commitizen": "^4.3.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.5.2",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
